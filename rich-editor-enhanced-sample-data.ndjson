ble Rows\",\n      of: [tableRowType],\n    }),\n  ],\n})"}],"icon":"Database"},{"label":"React Component","content":[{"_type":"code","language":"tsx","filename":"Table.tsx","code":"export default function Table({\n  caption,\n  headers = [],\n  rows = [],\n  style = \"default\",\n  size = \"default\",\n  responsive = true,\n}: TableProps) {\n  const [sortColumn, setSortColumn] = useState<number | null>(null);\n  const [sortDirection, setSortDirection] = useState<SortDirection>(null);\n  \n  const handleSort = (columnIndex: number) => {\n    const header = headers[columnIndex];\n    if (!header?.sortable) return;\n    \n    // Cycle through: asc -> desc -> null\n    if (sortColumn === columnIndex) {\n      if (sortDirection === \"asc\") {\n        setSortDirection(\"desc\");\n      } else if (sortDirection === \"desc\") {\n        setSortDirection(null);\n        setSortColumn(null);\n      }\n    } else {\n      setSortColumn(columnIndex);\n      setSortDirection(\"asc\");\n    }\n  };\n  \n  return (\n    <table className={cn(\"w-full\", tableStyles[style])}>\n      {/* Table implementation */}\n    </table>\n  );\n}"}],"icon":"Code"},{"label":"Usage Example","content":[{"_type":"code","language":"json","filename":"table-data.json","code":"{\n  \"_type\": \"table\",\n  \"caption\": \"API Endpoints\",\n  \"headers\": [\n    {\n      \"title\": \"Endpoint\",\n      \"sortable\": true,\n      \"alignment\": \"left\"\n    },\n    {\n      \"title\": \"Method\",\n      \"sortable\": true,\n      \"alignment\": \"center\"\n    }\n  ],\n  \"rows\": [\n    {\n      \"cells\": [\n        {\n          \"content\": \"/api/users\",\n          \"type\": \"code\"\n        },\n        {\n          \"content\": \"GET\",\n          \"type\": \"text\"\n        }\n      ]\n    }\n  ],\n  \"style\": \"striped\",\n  \"responsive\": true\n}"}],"icon":"FileText"}],"defaultTab":1},{"_type":"block","_key":"conclusion","style":"h2","children":[{"_type":"span","text":"Conclusion","_key":"co